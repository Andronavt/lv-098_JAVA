<!-- 			<param name="ConversionPattern" value="%d [%t] %-5p (%F:%L:%M)  %c{1}  - %m%n" /> -->
<!-- 		 <param name="ConversionPattern" value="%-5p %c{1} - %m%n"/> --> 
<!-- 		</layout> -->
<!-- 	</appender> -->
	 <appender name="fileInfo" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="d:/lv-098_JAVA/logs/info.log" />
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %-5p (%F:%L:%M)  %c{1}  - %m%n" />
        </layout>
	</appender>
	<appender name="fileWarn" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="d:/lv-098_JAVA/logs/warn.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %-5p (%F:%L:%M)  %c{1}  - %m%n" />
        </layout>
	</appender>
	<appender name="fileErr" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="d:/lv-098_JAVA/logs/error.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %-5p (%F:%L:%M)  %c{1}  - %m%n" />
        </layout>
	</appender>

	<!-- Application Loggers -->
	<logger name="tc.lv.main">
		<level value="info" />
	</logger>

	<!-- 3rdparty Loggers -->
	<logger name="tc.lv.dao">
		<level value="info" />
	</logger>

	<logger name="tc.lv.domain">
		<level value="info" />
	</logger>

	<logger name="tc.lv.service">
		<level value="info" />
	</logger>

	<logger name="tc.lv.web">
		<level value="info" />
	</logger>
	
	<logger name="webapp">
		<level value="info" />
	</logger>
	
	<logger name="infoLog" additivity="false">
		<level value="info" />
		<appender-ref ref="fileInfo" />		
	</logger>
	
	<logger name="warnLog" additivity="false">
		<level value="warn" />
		<appender-ref ref="fileWarn" />		
	</logger>
	<logger name="errorLog">
		<level value="error" />
		<appender-ref ref="console" />
		<appender-ref ref="fileErr" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="info" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>
